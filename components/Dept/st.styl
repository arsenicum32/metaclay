.dept
  width 100vw
  max-width 800px
  margin auto
  height 100vh
.left
  width 40%
  height 100vh
  float left
  img
    width 20%
    margin-left 5%
    margin-top 10%
    border-radius 50%
  ul
    margin-left 5%
    padding 0
    list-style-type square
    font-weight bold
    color #333
  li
    margin-left 5%
    padding 0
    font-size .7em
    font-weight lighter
    width 80%
  h3
    width 80%
    margin-left 5%
    color #333
  p
    width 80%
    font-size .9em
    margin-left 5%
    color #aaa
.right
  width 60%
  height 100vh
  float right

@media (orientation:portrait)
  .left
    width 100%
    ul,h3
      font-size 1.2em
    p,li
      font-size 1em
  .right
    width 100%
